<div class="text-center mb-4 mt-3">
  <h6 class="h3">Create a Guest account</h6>
  <p class="text-muted mb-0">It's easy</p>
</div>
<span class="clearfix"></span>

<%= simple_form_for(@user, as: :user, url: registration_path(:user)) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6 d-inline-block">
      <%= f.input :first_name, label: "First Name", input_html: { class: "form-control", placeholder: "Mark" } %>
    </div>
    <div class="col-md-6 d-inline-block">
      <%= f.input :last_name, label: "Last Name", input_html: { class: "form-control", placeholder: "Washington" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :email, label: "Your email address", input_html: { class: "form-control", placeholder: "mark@coolpodcast.com" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :password, label: "A good password", input_html: { class: "form-control", placeholder: "********" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.input :password_confirmation, label: "A good password again", input_html: { class: "form-control", placeholder: "********" } %>
    </div>
  </div>

  <%= f.hidden_field :host, value: false %>
  <%= f.hidden_field :guest, value: true %>

  <div class="my-4">
    <span class="text-sm">By clicking "Create account", you agree to our <a href="/terms-of-service">Terms and Conditions</a> and <a href="/privacy-policy">Privacy Policy</a>.</span>
  </div>
  <div class="row align-items-center">
    <div class="col-sm-7">
      <button type="submit" class="btn btn-primary mb-3 mb-sm-0" data-disable-with="Creating...">Create account</button>
    </div>
    <div class="col-sm-5 text-sm-right">
      <span class="small d-sm-block d-md-inline">Already registered?</span>
      <a href="/users/sign_in" class="small font-weight-bold">Sign in</a>
    </div>
  </div>

  <div class="row align-items-center mb-5 mt-5">
    <div class="col-lg-12 col-md-12">
      <a href="<%= new_user_password_path %>" class="even-smaller font-weight-bold">Forgot your password or having trouble signing in?</a>
    </div>
  </div>

<% end %>
