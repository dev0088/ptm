<section class="slice">
  
  <div class="container col-lg-7 col-md-10">
    <div class="mb-md text-center">
      <h3 class="heading h2 ">
        My Profile
      </h3>
      <div class="mt-3">
        <p class="lead ">Here's your public facing profile.</p>
      </div>
    </div>
    <div class="row row-grid">
      <div class="col-lg-8 mx-auto">
        <% if @user.present? %>
          <%= render partial: 'profile', locals: { user: @user } %>
        <% else %>
          Not found profile.
        <% end %>
      </div>
    </div>
  </div>
</section>
