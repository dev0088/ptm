<div class='container row'>
    <div class="col-xs-4 col-sm-4 text-right">
        <%= render partial: 'shared/guest_avatar', locals: { guest: user, custom_size: '72x72' } %>
    </div>
    <div class="col-xs-8 col-sm-8">
        <h2 class='mb-3'><%= user.full_name %></h2>
        <p class='mb-5'><%= user.profile&.bio %></p>
        <div class="row">
            <div class="col-md-12">
                <strong>Primary Industry: </strong>
                <% if user.profile&.primary_industry.blank? %>
                    <span class="badge badge-lg badge-pill badge-tertiary text-uppercase">empty</span>
                <% end %>
                <b><%= user.profile&.primary_industry %></b>
            </div>
        
        <div class="col-md-12">
            <strong>Expertises: </strong>
            <% if user.expertises.empty? %>
                <span class="badge badge-lg badge-pill badge-tertiary text-uppercase">empty</span>
            <% end %>
            <% user.expertises.each_with_index do |expertise, i| %>
                <% color = [:info, :danger, :warning, :success][i % 4] %>
                <span class="badge badge-lg badge-pill badge-<%=color%> text-uppercase"><%= expertise %></span>
            <% end %> 
        </div>
        <div class="col-md-12">
            <strong>Promotions: </strong>
            <% if user.promotions.empty? %>
                <span class="badge badge-lg badge-pill badge-tertiary text-uppercase">empty</span>
            <% end %>
            <% user.promotions.each_with_index do |promotion, i| %>
                <% color = [:info, :danger, :warning, :success][i % 4] %>
                <span class="badge badge-lg badge-pill badge-<%=color%> text-uppercase"><%= promotion %></span>
            <% end %> 
        </div>
        <div class="col-md-12">
            <strong>Topics: </strong>
            <% if user.topics.empty? %>
                <span class="badge badge-lg badge-pill badge-tertiary text-uppercase">empty</span>
            <% end %>
            <% user.topics.each_with_index do |topic, i| %>
                <% color = [:info, :danger, :warning, :success][i % 4] %>
                <span class="badge badge-lg badge-pill badge-<%=color%> text-uppercase"><%= topic %></span>
          <% end %> 
        </div>
        <% if user.profile&.audio_recording&.attached? %>
            <div class="col-md-12">
                <p class='d-flex align-items-center'><strong class='mr-3'>Audio Recording</strong>
                <%= render partial: 'shared/guest_audio', locals: { guest: user } %>
                </p>
            </div>
        <% end %>

        <%= render partial: 'guest/profiles/ratings/show_average_ratings', locals: { profile: user.profile } %>

        <br/>
        </div>
    </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <%= render partial: '/accounts/social_buttons/form', locals: {profile_object: user.profile, desc: user.full_name} %>
  </div>
</div>
