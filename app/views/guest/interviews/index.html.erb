<section class="slice">
  <div class="container">
    <% if current_user.pro? %>
      <div class="row mb-3">
        <div class="col-lg-12">        
          <div class="text-right">
            <a href="<%= new_interview_path(solicited: true) %>" class="btn btn-primary btn-icon">
              <span class="btn-inner--text">Solicit for interview</span>
              <span class="btn-inner--icon"><i class="fa fa-podcast"></i></span>
            </a>
          </div>
        </div>
      </div>
    <% end %>

    
      <div class="row row-grid">
        <div class="col-lg-12">
          <% if @interviews.exists? %>
            <%= render partial: 'guest/interviews/guest_upcoming_interviews' %>
          <% else %>
            <p class='text-center'>No upcoming interviews.</p>
          <% end %>
        </div>
      </div>

    <% if current_user.pro? && @solicited_interviews.exists? %>
      <div class="row row-grid">
        <div class="col-lg-12">
          <%= render partial: 'guest/interviews/guest_solicited_interviews' %>
        </div>
      </div>
    <% end %>


    <% if @past_interviews.exists? %>
      <div class="row row-grid">
        <div class="col-lg-12">
          <%= render partial: 'guest/interviews/guest_completed_interviews' %>
        </div>
      </div>
    <% end %>

    <% if current_user.basic_or_pro? && @active_applicants.exists? %>
      <div class="row row-grid">
        <div class="col-lg-12">
          <%= render partial: 'guest/interviews/guest_applied_interviews' %>
        </div>
      </div>
    <% end %>

  </div>
</section>
