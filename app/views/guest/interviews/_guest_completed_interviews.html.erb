<div class="card">
  <div class="card-header border-0">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h6 class="mb-0">Completed Interviews</h6>
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-sm table-flush align-items-center align-items-center">
      <thead>
      <tr>
        <th>Name</th>
        <th>Include Remote Studio</th>
        <th>Completed Date</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @past_interviews.each do |interview|  %>
        <tr>
          <td>
            <span class="font-weight-bold text-sm">
              <%= link_to interview.name, interview_path(interview) %>
            </span>
          </td>
          <td>
            <%= interview.needs_hardware ? 'Yes' : 'No' %>
          </td>
          <td>
            <%= local_time(interview.completed_at) %>
          </td>
          <td>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>

  </div>
</div>