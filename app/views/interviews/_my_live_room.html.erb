
<section class="pt-5 pt-lg-0">
  <div class="container">
    <h3 class='mt-5'>
      <% if @interview.account.logo.attachment %>
        <%= image_tag @interview.account.logo.variant(resize: "50x50"), class: 'round-account-logo' %>
      <% else %>
        <span><%= @interview.account.name %>:</span>
      <% end %>
      <span class='ml-3'><%= @interview.name %></span>
    </h3>
    <div class="row">
      <div class="col-md-8 mt-lg-3">
        <div class="card">
          <div class="card-body text-center">
            <div id='video-box'>
            </div>
          </div>
        </div>
        <div><i>Participant video will appear above.</i></div>
      </div>
      <div class="col-md-4 mt-lg-3 mb-5">

        <%= render 'live_sidebar' %>

      </div>
    </div>
  </div>
</section>
