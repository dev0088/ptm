<div class="card-header border-0">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h6 class="mb-0">Completed Interviews</h6>
    </div>
    <div class="text-right">
      <div class="actions"></div>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-hover align-items-center dataTable">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Date Completed</th>
      </tr>
    </thead>
    <tbody>
      <% @past_interviews.each do |interview|  %>
      <tr>
        <td>
          <span class="font-weight-bold text-sm">
            <%= link_to interview.name, interview_path(interview) %>
          </span>
        </td>
        <td>
          <%= interview.state %>
        </td>
        <td>
          <%= local_time(interview.completed_at) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>