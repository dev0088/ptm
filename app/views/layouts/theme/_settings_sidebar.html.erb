<div class="col-lg-3">

  <div data-toggle="sticky" data-sticky-offset="100" data-negative-margin=".card-profile-cover">

    <div class="card">

      <div class="card-header py-3">
        <span class="h6">Settings</span>
      </div>

      <div class="list-group list-group-sm list-group-flush">
        <a href="/preferences" class="list-group-item list-group-item-action d-flex justify-content-between <%= darken?('preferences') %>">
          <div>
            <i class="fa fa-user-circle mr-2"></i>
            <span>Account</span>
          </div>
          <div>
            <i class="fa fa-angle-right"></i>
          </div>
        </a>
      </div>

      <div class="list-group list-group-sm list-group-flush">
        <a href="<%= credit_cards_path %>" class="list-group-item list-group-item-action d-flex justify-content-between <%= darken?('credit_cards') %>">
          <div>
            <i class="fa fa-credit-card mr-2"></i>
            <span>Billing</span>
          </div>
          <div>
            <i class="fa fa-angle-right"></i>
          </div>
        </a>
      </div>
      <% if host? %>
        <div class="list-group list-group-sm list-group-flush">
          <a href="<%= host_plan_preferences_plans_path %>" class="list-group-item list-group-item-action d-flex justify-content-between <%= darken?('plans') %>">
            <div>
              <i class="fa fa-credit-card mr-2"></i>
              <span>Plan</span>
            </div>
            <div>
              <i class="fa fa-angle-right"></i>
            </div>
          </a>
        </div>
      <% end %>

      <% if guest? %>
        <div class="list-group list-group-sm list-group-flush">
          <a href="<%= preferences_plans_path %>" class="list-group-item list-group-item-action d-flex justify-content-between <%= darken?('plans') %>">
            <div>
              <i class="fa fa-credit-card mr-2"></i>
              <span>Plan</span>
            </div>
            <div>
              <i class="fa fa-angle-right"></i>
            </div>
          </a>
        </div>

        <div class="list-group list-group-sm list-group-flush">
          <a href="<%= preferences_settings_path %>" class="list-group-item list-group-item-action d-flex justify-content-between <%= darken?('settings') %>">
            <div>
              <i class="fa fa-credit-card mr-2"></i>
              <span>Profile</span>
            </div>
            <div>
              <i class="fa fa-angle-right"></i>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
