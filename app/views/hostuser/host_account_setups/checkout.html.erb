<%= render_flash %>

<section class="slice">
  <div class="container">
    <div class="row row-grid">

      <div class="col">
        <div class="page-inner-header mb-4">
          <div class="row row-grid align-items-center">
            <div class="col-lg-10">
              <div class="media align-items-center">
                <div class="media-body">
                  <h2 class="mb-1 mb-3">Checkout</h5>
                  <h5 class="mb-1">Complete your subscription plan</h3>
                  <p class="text-muted mb-0">Please fill out your payment information below. Payment is handled by our secure payment-processor.</p>
                  <p class="text-muted mb-0">
                    We will send a <%= @plan.amount_str %> invoice for your plan: <b><%= @plan.nickname %></b>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-10">

            <%= form_tag(purchase_host_account_setups_path, method: :post, id: 'payment-form') do %>

              <%= render partial: 'card_info' %>
              <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <div class="row mt-4">
                    <div class="col-lg-4 col-md-4">
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <button class="btn btn-primary">Complete my subscription</button>
                    </div>
                  </div>
                </div>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= javascript_include_tag 'checkout', 'data-turbolinks-track': 'reload' %>
