<div class="table-responsive-lg">
  <table class="table align-items-center">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
    </thead>
    <tbody>
      <tr>
        <td>
          Me
        </td>
        <td></td>
        <td>
          Super Admin
        </td>
        <td>
        </td>
      </tr>
    <% @invites.each do |i| %>
        <tr>
          <td scope="row" class="name-link">
            <div class="media align-items-center">
              <div class="media-body">
                <%= i.name %>
              </div>
            </div>
          </td>

          <td scope="row" class="name-link">
            <div class="media align-items-center">
              <div class="media-body">
                <%= i.email %>
              </div>
            </div>
          </td>
          <td scope="row" class="name-link">
            <div class="media align-items-center">
              <div class="media-body">
                <%= i.status %>
              </div>
            </div>
          </td>
          <td scope="row" class="name-link">
            <%= link_to podcast_invite_path(i.code), method: :delete, class: "btn btn-sm btn-secondary btn-icon-only btn-circle rounded-circle" do %>
                <span class="btn-inner--icon"><i class="fa fa-trash-o"></i></span>
            <% end %>
            <% if i.invited? %>
              <%= link_to resend_podcast_invite_path(i.code), method: :post, class: "btn btn-sm btn-secondary btn-icon-only btn-circle rounded-circle" do %>
                  <span class="btn-inner--icon"><i class="fa fa-bell-o"></i></span>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr class="table-divider"></tr>
    <% end %>
    </tbody>
  </table>
</div>