<% if invoices.empty? %>
  <p class="text-center">You have no invoices.</p>
<% else %>
  <div class="table-responsive-lg">
    <table class="table table-cards align-items-center">
      <thead>
        <th></th>
        <th>Due at</th>
        <th>Stripe invoice id</th>
        <th>Status</th>
        <th></th>
      </thead>
      <tbody>
      <% invoices.each do |invoice| %>
      <tr>
        <th scope="row">
          <%= invoice.id %>
        </td>
        <td scope="row" class="name-link">
          <%= invoice.due_date %>
        </td>
        <td scope="row">
          <%= invoice.stripe_invoice_id %>
        </td>
        <td scope="row">
          <%= invoice.status %>
        </td>
      </tr>
      <tr class="table-divider"></tr>
      <% end %>
      </tbody>
    </table>
  </div>

<% end %>
