
<section class="slice">
  <div class="container">
    <div class="row row-grid">

      <div class="col">
        <div class="page-inner-header mb-4">
          <div class="row row-grid align-items-center">
            <div class="col-lg-8">
              <div class="media align-items-center">
                <div class="media-body">
                  <h5 class="mb-1">Rental history</h5>
                  <p class="text-muted mb-0">The microphones you've ordered and where they're headed.</p>
                </div>
              </div>
            </div>
            <div class="col-auto flex-fill mt-4 mt-sm-0 text-sm-right d-none d-lg-block">
              <a href="/orders/new" class="btn btn-sm btn-primary btn-circle btn-icon ">
                <span class="btn-inner--icon"><i class="fas fa-fire"></i></span>
                <span class="btn-inner--text">New order</span>
              </a>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover table-cards align-items-center">
            <tbody>
            <%= render @orders %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</section>
